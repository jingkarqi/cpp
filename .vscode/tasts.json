{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc.exe 生成活动文件",
            "type": "shell",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "使用 MSYS2 UCRT64 的 GCC 编译器"
        }
    ]
}